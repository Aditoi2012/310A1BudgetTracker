<HBox alignment="CENTER_LEFT" prefHeight="56.0" prefWidth="732.0" style="-fx-background-color: #FFFFFF;" stylesheets="@../../../Css/categories_page.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.budgettracker.CategoryItemController">
