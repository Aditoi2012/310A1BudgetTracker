            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets left="20.0" />
         </padding>
      </Label>
      <Label fx:id="budgetedValue" prefHeight="24.0" prefWidth="145.0" text="0.00 $">
