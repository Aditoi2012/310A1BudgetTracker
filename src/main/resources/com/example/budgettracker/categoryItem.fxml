            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets left="20.0" />
         </padding>
      </Label>
      <Button fx:id="editBtn" mnemonicParsing="false" text="Edit">
         <HBox.margin>
            <Insets />
